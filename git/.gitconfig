[user]
  name = Sergio Rafael Gianazza
  email = sergio@gianu.me
  # signingkey = F0D3E6F5
[diff]
  noprefix = true
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  renames = true
[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[init]
  defaultBranch = main
[column]
  ui = auto
[color]
  ui = true
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
	meta = yellow
	frag = magenta bold
	old = red bold
	commit = yellow bold
	new = green
	whitespace = red reverse
[color "status"]
  added = green
  changed = yellow
  untracked = cyan
[color "diff-highlight"]
  oldNormal = red bold
  oldHighlight = red bold 52
  newNormal = green bold
  newHighlight = green bold 22
[commit]
  verbose = true
[push]
  default = simple
  autoSetupRemote = true
  followTags = true
[pull]
  rebase = false
[fetch]
  prune = true
  pruneTags = true
  all = true
[rerere]
  enabled = true
  autoupdate = true
[alias]
  st = status -sb
  ci = commit --verbose
  co = checkout
  d = diff --compaction-heuristic
  dc = diff --cached
  amend = commit --amend
  aa = add --all
  ff = merge --ff-only
  pullff = pull --ff-only
  noff = merge --no-ff
  pom = push origin master
  cam = commit -am
  pr = pull --rebase
  head = !git l -1
  h = !git head
  r = !git l -20
  ra = !git r --all
  br = branch
  co = checkout
  up = pull --rebase --autostash

  r = !git l -30
  ra = !git r --all
  l = "!source ~/.githelpers && pretty_git_log"
  la = !git l --all
  lol = log --graph --decorate --pretty=oneline --abbrev-commit
  lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
  div = divergence
  gn = goodness
  gnc = goodness --cached
  fa = fetch --all
  undo = "!gitundo() { \
        git reset --hard HEAD\"@{${1-1}}\"; \
    }; gitundo"
[format]
  pretty=format:%C(yellow)%h%Creset -%C(red)%d%Creset %s %Cgreen(%ar) %C(bold blue)<%an>%Creset
[merge]
  tool = vimdiff
[core]
  editor = /usr/local/bin/nvim
  pager = diff-so-fancy | less --tabs=4 -RFX
  excludefile = ~/.gitignore
[i18n]
	logOutputEncoding = UTF-8
	commitencoding = UTF-8
[github]
	user = gianu
[ghi]
	token = !security find-internet-password -a gianu -s github.com -l 'ghi token' -w
